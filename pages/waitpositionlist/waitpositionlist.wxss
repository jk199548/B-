page{
  background-color: #fcfcfc;
}
.zhaopin-yes-box{
  margin-top: 30rpx;
  background-color: #fff;
  width: 750rpx;
  height: 270rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-direction: row;
  border-bottom: 1rpx solid #eeeeee;
}
.left{
  margin-left: 30rpx;
  width: 160rpx;
  height: 270rpx;
}
.left image{
  width: 160rpx;
  height: 160rpx;
  margin-top: 50rpx;
}
.right{
  width: 530rpx;
  height: 270rpx;
}
.right-top{
  margin-top: 60rpx;
  line-height: 30rpx;
  position: relative;
}
.right-top view{
  position: absolute;
  right: 0;
  top: 0;
}
.right-top text:nth-child(1){
  font-size: 36rpx;
  color: #3d3d3d;
  font-weight: bold;
}
.right-top text:nth-child(2){
  font-size: 28rpx;
  color: #808080;
  margin-left: 23rpx;
}
.right-top text:nth-child(3){
  font-size: 28rpx;
  color: #808080;
  float: right;
  margin-right: 20rpx;
}
.right-bottom{
  margin-top: 60rpx;
  width: 500rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-direction: row;
}
.right-bottom text:nth-child(1){
  font-size: 30rpx;
  color: #3d3d3d;
}
.right-bottom text:nth-child(2){
  font-size: 28rpx;
  color: #3d3d3d;
}
.modal{
  width: 220rpx;
  height: 340rpx;
  position: fixed;
  top: 76rpx;
  left: 530rpx;
  background: black;
  opacity: 0.5;
  z-index: 9999;
  border-radius:10rpx;
  display: flex;
  justify-content: space-evenly;
  align-items: center;
  flex-direction: column;
}
