<!--pages/addnewgonggao/addnewgonggao.wxml-->
<view class="box">
  <view class="gonggao-name">
    <input value="{{gonggaotitle}}" placeholder="请输入您的公告名称" placeholder-class="placeholder" bindinput="saveinputtitle"></input>
  </view>
  <view class="gonggao-content">
    <textarea value="{{gonggaocontent}}" placeholder="请输入您的公告内容···" placeholder-class="placeholder" bindinput="saveinputcontent"></textarea>
  </view>
  <view class="gonggao-bottom">
    <view bindtap="{{active?'savegonggao':''}}">确定修改</view>
  </view>
</view>
