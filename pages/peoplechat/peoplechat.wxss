/* pages/peoplechat/peoplechat.wxss */
.bottom{
  position: fixed;
  width: 100%;
  height: 120rpx;
  background-color: #ffffff;
  bottom: 0;
  left: 0;
  display: flex;
  justify-content: space-evenly;
  align-items: center;
  flex-direction: row;
}
.bottom-input{
  width: 470rpx;
  height: 80rpx;
  background:rgba(244,244,244,1);
  border-radius:10rpx;
  padding-left: 20rpx;
}
.bottom image{
  width: 60rpx;
  height: 60rpx;
}
.sendmsgbtn{
  width: 150rpx;
  height: 80rpx;
  background-color: #1ec335;
  color: #ffffff;
  font-size: 36rpx;
  text-align: center;
  line-height: 80rpx;
  border-radius: 15rpx;
}

page{
  background:rgba(244,244,244,1);
}

.top{
  box-shadow: 0rpx 16rpx 16rpx 0rpx rgba(255,164,92,0.2);
  -webkit-box-shadow:0rpx 16rpx 16rpx 0rpx rgba(255,164,92,0.2);
  width: 690rpx;
  height: 230rpx;
  background-color: #ffffff;
  border-bottom:0.1px solid #fff;
  position: fixed;
  top: 30rpx;
  left: 30rpx;
  z-index: 100;
}
.top-nav{
  width: 690rpx;
  height: 80rpx;
  display: flex;
  justify-content: space-evenly;
  align-items: center;
  padding-top: 50rpx;
  flex-direction: row;
}
.top-nav-box{
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-direction: column;
  width: 25%;
  height: 80rpx;
  overflow: hidden;
}
.top-nav-box image{
  width: 44rpx;
  height: 44rpx;
}
.top-nav-box text{
  font-size: 28rpx;
  color: #333333;
}
.sendmoney{
  font-size: 26rpx;
  color: #808080;
  float: right;
  margin-right: 46rpx;
  margin-top: 40rpx;
}
.chatbox{
  width: 100%;
  height: 750rpx;
  margin-top: 320rpx;
}
.chattime{
  width: 100%;
  text-align: center;
  font-size: 26rpx;
  color: #808080;
}
.your-msg{
  width: 100%;
  display: flex;
  justify-content: flex-end;
  flex-direction: row;
  margin-top: 20rpx;
  margin-right: 30rpx;
  align-items: flex-start;
  position: relative;
}
.your-msg text:nth-child(1){
  font-size: 26rpx;
  color: #808080;
  position: absolute;
  right: 125rpx;
  top: 0;
}
.your-msg-content{
  margin-right: 14rpx;
  max-width: 472rpx;
  border-radius: 6rpx;
  line-height: 60rpx;
  font-size: 28rpx;
  color: #ffffff;
  background-color: #fc7001;
  min-height: 60rpx;
  display: block;
  padding-left: 15rpx;
  padding-right: 15rpx;
  margin-top: 36rpx;
}
.other-msg{
  width: 100%;
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
  flex-direction: row;
  margin-top: 20rpx;
  margin-left: 30rpx;
  position: relative;
}
.other-msg text:nth-child(1){
  font-size: 26rpx;
  color: #808080;
  position: absolute;
  left: 129rpx;
  top: 0;
}
.other-msg image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
.other-msg-content{
  margin-left: 14rpx;
  max-width: 472rpx;
  border-radius: 6rpx;
  line-height: 60rpx;
  font-size: 28rpx;
  text-align: center;
  color: #333333;
  background-color: #ffffff;
  padding-left: 15rpx;
  padding-right: 15rpx;
  margin-top: 36rpx;
}