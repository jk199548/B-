/* pages/qiandaodetail/qiandaodetail.wxss */
page{
  background-color: #fafafa;
}
.qiandaodetail{
  width: 100%;
  height: 420rpx;
  margin-top: 30rpx;
  background-color: #fff;
}
.qiandaodetail-top{
  width: 690rpx;
  margin-left: 30rpx;
  padding-top: 40rpx;
  line-height: 120rpx;
  height: 120rpx;
  display: flex;
}
.qiandaodetail-top image{
  width: 120rpx;
  height: 120rpx;
}
.qiandaodetail-top text{
  width: 200rpx;
  height: 120rpx;
  line-height: 120rpx;
  display: block;
  margin-left: 30rpx;
  font-size: 36rpx;
  color: #3d3d3d;
}
.qiandaodetail-mid{
  width: 690rpx;
  margin-left: 30rpx;
  margin-top: 25rpx;
}
.qiandaodetail-mid text:nth-child(1){
  font-size: 28rpx;
  color: #3d3d3d;
}
.qiandaodetail-mid text:nth-child(2){
  font-size: 28rpx;
  color: #3d3d3d;
  margin-left: 65rpx;
}
.qiandaodetail-center{
  width: 690rpx;
  margin-left: 30rpx;
  margin-top: 10rpx;
}
.qiandaodetail-center text:nth-child(1){
  font-size: 28rpx;
  color: #3d3d3d;
}
.qiandaodetail-center text:nth-child(2){
  font-size: 28rpx;
  color: #3d3d3d;
  margin-left:35rpx;
}
.qiandaodetail-bottom{
  width: 690rpx;
  margin-left: 30rpx;
  display: flex;
  justify-content: space-between;
  margin-top: 10rpx;
}
.notice{
  width: 690rpx;
  margin-left: 30rpx;
  text-align: right;
  font-size: 24rpx;
  color: #808080;
  margin-top: 15rpx;
}
.showmore{
  width: 100%;
  margin-top: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.showmore image{
  width: 22rpx;
  height: 12rpx;
  margin-left: 10rpx;
}
.showmore text{
  font-size: 24rpx;
  color: #9d9d9d;
}