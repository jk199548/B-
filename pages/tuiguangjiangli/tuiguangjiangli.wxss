  flex-direction: row;
}
.liucheng-box{
  width: 116rpx;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}
.invitedbtn{
  width: 300rpx;
  height: 60rpx;
  border: 1rpx solid #eeeeee;
