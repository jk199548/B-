.head{
  height: 92rpx;
  position: relative;
}
.navbar{ 
 display: flex; 
 width: 100%; 
 flex-direction: row;
 justify-content: center;
 align-content: center; 
 line-height: 80rpx; 
 position: fixed; 
 top: 0rpx;
 border-top: 1rpx solid #eaeaea; 
 background-color: #ffffff;
}
.dakaimage{
  position: absolute;
  top: 48rpx;
  right: 84rpx;
}
.dakatext{
  position: absolute;
  top: 43rpx;
  right: 32rpx;
}
.baractive{
  margin-top: 24rpx;
  width: 200rpx;
  height: 62rpx;
  border: 1rpx solid #f77201;
  display: flex;
  justify-content: center;
  align-content: center;
  font-size: 36rpx;
  color:#ffffff;
  background-color: #f77201;
  line-height:62rpx;

}
.barnormal{
  margin-top: 24rpx;
  width: 200rpx;
  height: 62rpx;
  border: 1rpx solid gray;
  display: flex;
  justify-content: center;
  align-content: center;
  font-size: 36rpx;
  color: #333333;
  line-height:62rpx;
}
.interest-navbar{
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-direction: row;
  width: 640rpx;
  margin-left: 55rpx;
}
.interestbaractive{
  font-size: 32rpx;
  color: #333333;
  margin-top: 37rpx;
}
.interestbarnormal{
  font-size: 28rpx;
  color: #808080;
  margin-top: 40rpx;
}
.interest-box{
  width: 690rpx;
  height: 200rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-direction: row;
  margin-left: 30rpx;
  border-bottom: 1rpx solid #f4f4f4;
}
.interest-left{
  width: 122rpx;
  height: 122rpx;
  position: relative;
}
.interest-left-avtar{
  width: 122rpx;
  height: 122rpx;
  border-radius: 50%;
}
.interest-right{
  width: 540rpx;
  height: 93rpx;
  margin-left: 22rpx;
  margin-top: 21rpx;
  display: flex;
  justify-content: space-between;
  align-content: space-between;
  flex-direction: column;
}
.interest-right-top{
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-direction: row;
}
.interest-right-top-left{
  font-size:32rpx;
  color: #3d3d3d;
  font-weight: bold;
}
.interest-right-top-right{
  font-size:32rpx;
  color: #807f7f;
}
.interest-right-bottom{
  width: 540rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-direction: row;
}
.interest-right-bottom view{
  height: 28rpx;
  background-color: #f77201;
  color: #f4f4f4;
  font-size: 24rpx;
  padding-left: 15rpx;
  padding-right: 15rpx;
  padding-top: 5rpx;
  padding-bottom: 5rpx;
  border-radius: 20rpx;
}
.interest-right-bottom-text{
  width: 400rpx;
  font-size: 28rpx;
  color: #808080;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}
.showmore{
  margin-top: 60rpx;
  width: 100%;
  height: auto;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: row;
}
.showmore-text{
  font-size: 24rpx;
  color: #9d9d9d;
}
.showmore-image{
  width: 22rpx;
  height: 12rpx;
}

.lookme-box{
  margin-top: 40rpx;
  margin-left: 30rpx;
  width: 690rpx;
  height: 210rpx;
}
.lookme-box-left{
  width: 120rpx;
  height: 200rpx;
  float: left;
}
.lookme-box-left image{
  width: 120rpx;
  height: 120rpx;
  margin-top: 40rpx;
}
.lookme-box-right{
  float: left;
  width: 550rpx;
  height: 200rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-direction: row;

}
.lookme-box-right-name{
  font-size: 32rpx;
  color: #3d3d3d;
  font-weight: bold;
}
.lookme-box-right-more text{
  font-size: 30rpx;
  color:#808080; 
  margin-right: 10rpx;
}
.lookme-box-right-more image{
  width: 12rpx;
  height: 24rpx;
}
.lookme-top{
  width: 690rpx;
  height: 210rpx;
  border-bottom:1rpx solid #f4f4f4;
  display: flex;
  justify-content: space-between;
  flex-direction: row;
}
.lookme-top-left{
  width: 160rpx;
  height: 210rpx;
}
.lookme-top-left image{
  width: 160rpx;
  height: 160rpx;
}
.lookme-top-right{
  width: 500rpx;
  height: 210rpx;
}
.lookme-top-right-top text:nth-child(1){
  font-size: 36rpx;
  color: #3d3d3d;
  font-weight: bold;
}
.lookme-top-right-top text:nth-child(2){
  font-size: 28rpx;
  color: #808080;
  margin-left: 20rpx;
}
.lookme-top-right-top text:nth-child(3){
  font-size: 28rpx;
  color: #3d3d3d;
  float: right;
}
.lookme-top-right-mid{
  font-size: 28rpx;
  color: #333333;
  margin-top: 30rpx;
}
.lookme-top-right-bottom{
  font-size: 28rpx;
  color: #333333;
}
.lookme-bottom{
  width: 690rpx;
  margin-left: 30rpx;
  height: 120rpx;
  line-height: 120rpx;
}
.lookme-bottom text:nth-child(1){
  font-size: 26rpx;
  color: #808080;
}
.lookme-bottom text:nth-child(2){
  font-size: 26rpx;
  color: #fc7001;
  margin-left: 20rpx;
}