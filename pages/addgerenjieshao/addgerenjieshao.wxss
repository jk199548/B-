.headinfo{
  width: 690rpx;
  height: 155rpx;
  margin-left: 30rpx;
  display: flex;
  justify-content: space-between;
}
.headinfo-left{
  width: 195rpx;
  height: 155rpx;
}
.headinfo-left image{
  width: 195rpx;
  height: 155rpx;
}
.headinfo-right{
  width: 480rpx;
  height: 155rpx;
}
.headinfo-right view:nth-child(1){
  font-size: 32rpx;
  color: #3d3d3d;
  font-weight: bold;
  margin-top: 24rpx;
  float: left;
}
.headinfo-right view:nth-child(2){
  font-size: 24rpx;
  background-color: #fc7001;
  text-align: center;
  line-height: 36rpx;
  width: 120rpx;
  height: 36rpx;
  color: #ffffff;
  float: right;
  margin-top: 30rpx;
}
.headinfobox{
  width: 690rpx;
  height: 240rpx;
  margin-left: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
  border-bottom: 1rpx solid #eeeeee;
}
.headinfobox-left{
  width: 120rpx;
  height: 120rpx;
}
.headinfobox-left image{
  width: 120rpx;
  height: 120rpx;
}
.headinfobox-right{
  width: 540rpx;
  height: 120rpx;
}
.headinfobox-right-mid{
  display: flex;
  justify-content: space-between;
}
.headinfobox-right-top{
  font-size: 32rpx;
  color: #3d3d3d;
  margin-top: 12rpx;
  font-weight: bold;
}
.headinfobox-right-mid text:nth-child(1){
  margin-top: 30rpx;
  font-size: 28rpx;
  color: #3d3d3d;
}
.headinfobox-right-mid text:nth-child(2){
  margin-top: 30rpx;
  font-size: 28rpx;
  color: #333333;
}
.headinfobox-bottom{
  font-size: 24rpx;
  color: #fc7001;
}
.qiyehezuo-text{
  font-size: 36rpx;
  color: #3d3d3d;
  margin-left: 30rpx;
  font-weight: bold;
  margin-top: 40rpx;
}
.qiyehezuo-list{
  width: 650rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
  margin-left: 30rpx;
  margin-top: 30rpx;
}
.qiyehezuo-list-box{
  width: 25%;
  height: 110rpx;
  margin-bottom: 50rpx;
  display: flex;
  justify-content: center;
}
.qiyehezuo-list-box image{
  width: 110rpx;
  height: 110rpx;
}
.conpanyintro{
  width: 690rpx;
  margin-left: 30rpx;
}
.conpanyintro-text{
  font-size: 36rpx;
  color: #3d3d3d;
  font-weight: bold;
}
.conpanyintro-content{
  width: 690rpx;
  height: 420rpx;
  background-color: #F4F4F4;
  border-radius: 10rpx;
  margin-top: 60rpx;
}
.conpanyintro-content textarea{
  width: 670rpx;
  height: 400rpx;
  background-color: #F4F4F4;
  border-radius: 10rpx;
  padding-left: 20rpx;
  padding-top: 20rpx;
}
.uploadimage{
  width: 690rpx;
  margin-left: 30rpx;
  margin-top: 60rpx;
}
.uploadimage-text{
  font-size: 36rpx;
  color: #3d3d3d;
  font-weight: bold;
}
.uploadimage image{
  width: 690rpx;
  height: 750rpx;
  margin-top: 60rpx;
}
.uploadimage text{
  font-size: 28rpx;
  color: #808080;
  width: 690rpx;
  text-align: right;
  display: block;
}
.confirmbtn{
  width: 690rpx;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  font-size: 36rpx;
  color: #ffffff;
  background-color: #fc7001;
  border-radius: 45rpx;
  margin-top: 60rpx;
  margin-left: 30rpx;
  margin-bottom: 80rpx;
}