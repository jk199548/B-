  color: #333333;
}
.showmore{
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 30rpx;
}
.showmore text{
  font-size: 28rpx;
  color: #9d9d9d;
}
.showmore image{
  width: 22rpx;
  height: 12rpx;
  margin-left: 10rpx;
}
.liucheng{
  width: 650rpx;
  height: 200rpx;
  margin-left: 50rpx;
