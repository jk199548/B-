/* pages/toudixiangqing/toudixiangqing.wxss */
page{
  background-color: #f4f4f4;
}
.top-nav{
  width: 750rpx;
  height: 100rpx;
  background-color: #ffffff;
}
.top-nav-box{
  display: flex;
  justify-content: space-evenly;
  align-items: center;
  flex-direction: row;
  border-top: 1rpx solid #f4f4f4;
  border-bottom: 1rpx solid #f4f4f4;
}
.active{
  width: 250rpx;
  height: 100rpx;
  border-bottom:1rpx solid #fc7001;
  color: #fc7001;
  font-size: 28rpx;
  display: flex;
  align-items: center;
}
.normal{
  width: 250rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
}
.active view{
  width: 250rpx;
  height: 50rpx;
  border-right: 1rpx solid #f4f4f4;
  text-align: center;
}
.normal view{
  width: 250rpx;
  height: 50rpx;
  border-right: 1rpx solid #f4f4f4;
  text-align: center;
}
.mid-box{
  width: 100%;
  height: 270rpx;
  background-color:#ffffff;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-direction: row;
  margin-top: 30rpx;
}
.mid-box-left{
  width: 220rpx;
  height: 270rpx;
}
.mid-box-left image{
  width: 160rpx;
  height: 160rpx;
  margin-top: 50rpx;
  margin-left: 30rpx;
}
.mid-box-right{
  width: 530rpx;
  height: 270rpx;
}
.mid-box-right-top{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-direction: row;
  margin-top: 75rpx;
}
.mid-box-right-top text:nth-child(1){
  font-size: 36rpx;
  color: #3d3d3d;
  font-weight: bold;
}
.mid-box-right-top text:nth-child(2){
  font-size: 28rpx;
  color: #808080;
  margin-left: 25rpx;
}
.mid-box-right-bottom{
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-direction: row;
  margin-top: 50rpx;
}
.mid-box-right-bottom text:nth-child(1){
  font-size: 30rpx;
  color: #3d3d3d;
}
.mid-box-right-bottom text:nth-child(2){
  font-size: 28rpx;
  color: #3d3d3d;
  margin-right: 30rpx;
}
.tochatgroup{
  width: 690rpx;
  height: 90rpx;
  background-color: #fc7001;
  font-size: 36rpx;
  line-height: 90rpx;
  text-align: center;
  border-radius: 40rpx;
  color: #ffffff;
  margin-left: 30rpx;
  margin-top: 55rpx;
}