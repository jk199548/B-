.tuiguang-top{
  width: 690rpx;
  height: 280rpx;
  margin-left: 30rpx;
  margin-top: 30rpx;
  position: relative;
}
.tuiguang-top image{
  width: 690rpx;
  height: 280rpx;
  position: absolute;
  left: 0;
  right: 0;
}
.tuiguang-top view:nth-child(2){
  font-size: 40rpx;
  color: #ffffff;
  font-weight: bold;
  position: absolute;
  left: 50rpx;
  top: 60rpx;
}
.tuiguang-top view:nth-child(3){
  font-size: 38rpx;
  color: #ffffff;
  position: absolute;
  right: 50rpx;
  top: 60rpx;
}
.tuiguang-top view:nth-child(4){
  color: #ffffff;
  position: absolute;
  left: 50rpx;
  top: 155rpx;
}
.tuiguang-top view:nth-child(5){
  color: #ffffff;
  position: absolute;
  right: 50rpx;
  top: 160rpx;
}
.positioning{
