<!-- 群聊页面 -->
<view class="box">
  <view class="top">
    <view class="top-nav">
      <view class="top-nav-box" bindtap="topositiondetail">
        <image src="../../images/chat/workex.png"></image>
        <text>工作内容</text>
      </view>
      <view class="top-nav-box" bindtap="toqungonggao">
        <image src="../../images/chat/workex.png"></image>
        <text>群公告</text>
      </view>
      <view class="top-nav-box" bindtap="toqiandao">
        <image src="../../images/chat/workex.png"></image>
        <text>查看签到</text>
      </view>
      <view class="top-nav-box" bindtap="toqunguanli">
        <image src="../../images/chat/workex.png"></image>
        <text>发工资</text>
      </view>
      <view class="top-nav-box" bindtap="toqunguanli">
        <image src="../../images/chat/workex.png"></image>
        <text>群管理</text>
      </view>
    </view>
  </view>

  <!-- 聊天区域页面 -->
  <scroll-view scroll-y="true" class="chatbox">
    <block wx:for="{{msglist}}">
      <view class="chattime">2019-06-21  17:30</view>
      <!-- 自己消息页面 -->
      <view class="your-msg" wx:if="{{item.name=='my'}}" id="msg-{{index}}">
        <text>清扬风·2组</text>
        <text class="your-msg-content" wx:if="{{item.title!=''}}">{{item.title}}</text>
        <image class="chatimage" src="{{item.image}}" wx:if="{{item.title==''}}" style="width:400rpx;height:400rpx;margin-right:14rpx;"></image>
        <image src="../../images/index/avtar.png" style="width:100rpx;height:100rpx;border-radius:50%;"></image>
      </view>
      <!-- 他人消息页面 -->
      <view wx:else class="other-msg"  id="msg-{{index}}" >
        <text>清扬风·2组</text>
        <image src="../../images/index/avtar.png"></image>
        <text class="other-msg-content" wx:if="{{item.title!=''}}">{{item.title}}</text>
        <image class="chatimage" src="{{item.image}}" wx:if="{{item.title==''}}" style="width:400rpx;height:400rpx;margin-right:14rpx;"></image>
      </view>
    </block>
    <view style='width: 100%; height: 10vw;'></view>
  </scroll-view>
  <view class="bottom">
    <input class="bottom-input" bindfocus="focus" bindinput="bindinput" value="{{inputword}}"></input>
    <image src="../../images/chat/icon.png" bindtap="chooseimage"></image>
    <view class="sendmsgbtn" bindtap="sendmsg">发送</view>
  </view>
</view>