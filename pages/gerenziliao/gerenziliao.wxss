/* pages/gerenziliao/gerenziliao.wxss */
.box{
  border-top: 1rpx solid #eee;
}
.gerenziliao{
  width: 100%;
}
.headbox{
  width: 690rpx;
  height: 160rpx;
  margin-left: 30rpx;
  border-bottom: 1rpx solid #eee;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.headbox text{
  font-size: 28rpx;
  color: #808080;
}
.headbox image{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}
.conpanyname{
  width: 690rpx;
  height: 130rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #eee;
  margin-left: 30rpx;
}
.conpanyname text:nth-child(1){
  font-size: 28rpx;
  color: #808080;
}
.conpanyname text:nth-child(2){
  font-size: 28rpx;
  color: #333333;
}
.positionname{
  width: 690rpx;
  height: 130rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #eee;
  margin-left: 30rpx;
}
.positionname text:nth-child(1){
  font-size: 28rpx;
  color: #808080;
}
.positionname input{
  width: 525rpx;
  height: 70rpx;
  font-size: 28rpx;
  color: #333333;
  background-color: #FAFAFA;
  border-radius: 5rpx;
}
.placeholder{
  font-size: 28rpx;
  color: #CBCBCB;
}
.confirmbtn{
  width:690rpx;
  height: 90rpx;
  background-color: #fc7001;
  border-radius: 45rpx;
  line-height: 90rpx;
  text-align: center;
  font-size: 36rpx;
  color: #fff;
  margin-top: 30rpx;
  margin-left: 30rpx;
}