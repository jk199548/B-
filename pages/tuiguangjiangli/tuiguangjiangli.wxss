  justify-content: center;
  align-items: center;
  flex-direction: row;
  height: 40rpx;
  margin-top: 80rpx;
}
.positioning text{
  font-size: 36rpx;
  color: #333333;
  font-weight: bold;
  margin-left: 20rpx;
  margin-right: 20rpx;
}
.positioning view{
  width: 60rpx;
  height: 4rpx;
  background: black;
}
.invited{
  width: 690rpx;
  margin-left: 30rpx;
  margin-top: 30rpx;
}
.invited-list{
  width: 690rpx;
  height: 110rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #eeeeee;
}
.invited-list-left{
  width: 200rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.invited-list-left image{
  width: 68rpx;
  height: 68rpx;
}
.invited-list-left text{
  font-size: 28rpx;
  color: #333333;
}
.invited-list-right{
  width: 430rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
