/* pages/chat/chat.wxss */
.bottom{
  position: fixed;
  width: 100%;
  height: 120rpx;
  background-color: #ffffff;
  bottom: 0;
  left: 0;
  display: flex;
  justify-content: space-evenly;
  align-items: center;
  flex-direction: row;
}
.bottom-input{
  width: 470rpx;
  height: 80rpx;
  background:rgba(244,244,244,1);
  border-radius:10rpx;
  padding-left: 20rpx;
}
.bottom image{
  width: 60rpx;
  height: 60rpx;
}
.sendmsgbtn{
  width: 150rpx;
  height: 80rpx;
  background-color: #1ec335;
  color: #ffffff;
  font-size: 36rpx;
  text-align: center;
  line-height: 80rpx;
  border-radius: 15rpx;
}
page {
  background-color: #f1f1f1;
}
.top{
  width: 721rpx;
  height: 252rpx;
  position: fixed;
  left: 15rpx;
  top: 30rpx;
  z-index: 100;
}
.top image{
  width: 721rpx;
  height: 252rpx;
}
.positionbox{
  width: 623rpx;
  height: 98rpx;
  position: absolute;
  left: 53rpx;
  top: 60rpx;
}
.positionbox-top{
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-direction: row;
  line-height: 30rpx;
}
.positionname{
  font-size: 32rpx;
  color: #333333;
  font-weight: bold;
}
.positionprice text:nth-child(1){
  font-size: 32rpx;
  color: #333333;
  font-weight: bold;
}
.positionprice text:nth-child(2){
  font-size: 32rpx;
  color: #333333;
}
.positionbox-bottom{
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-direction: row;
  line-height: 100rpx;
}

.positionlist image{
  width: 28rpx;
  height: 28rpx;
  margin-right: 10rpx;
}
.positionlist text{
  font-size: 28rpx;
  color: #808080;
}
.chatbox{
  width: 100%;
  height: 800rpx;
  margin-top: 280rpx;
}
.chattime{
  width: 100%;
  text-align: center;
  font-size: 26rpx;
  color: #808080;
}
.your-msg{
  width: 100%;
  display: flex;
  justify-content: flex-end;
  flex-direction: row;
  margin-top: 20rpx;
  margin-right: 30rpx;
  align-items: flex-start;
}

.your-msg-content{
  margin-right: 14rpx;
  max-width: 472rpx;
  border-radius: 6rpx;
  line-height: 75rpx;
  font-size: 28rpx;
  color: #ffffff;
  background-color: #fc7001;
  min-height: 60rpx;
  display: block;
  padding-left: 15rpx;
  padding-right: 15rpx;
}
.other-msg{
  width: 100%;
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
  flex-direction: row;
  margin-top: 20rpx;
  margin-left: 30rpx;
}
.other-msg image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
.other-msg-content{
  margin-left: 14rpx;
  max-width: 472rpx;
  border-radius: 6rpx;
  line-height: 75rpx;
  font-size: 28rpx;
  text-align: center;
  color: #333333;
  background-color: #ffffff;
  padding-left: 15rpx;
  padding-right: 15rpx;
}